<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout">
    <data>
        <variable
                name="asteroid"
                type="com.udacity.asteroidradar.Asteroid"/>
        <variable
                name="clickListener"
                type="com.udacity.asteroidradar.asteroidlist.AsteroidClickListener"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.udacity.asteroidradar.AsteroidListFragment"
            android:onClick="@{() -> clickListener.onClick(asteroid)}">

        <ImageView
                android:id="@+id/asteroid_image"
                android:layout_width="50dp"
                android:layout_height="76dp"
                app:srcCompat="@drawable/ic_help_circle"
                android:layout_marginBottom="26dp"
                android:layout_marginTop="26dp"
                android:layout_marginStart="@dimen/spacing_normal"
                android:contentDescription="@string/nasa_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
                android:id="@+id/chapter_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:text="@{asteroid.codename}"
                app:layout_constraintStart_toEndOf="@+id/asteroid_image"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="GDG Mountain View is really long so it will wrap in tools"
                android:textAppearance="?textAppearanceHeadline6"
                android:gravity="center_vertical"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="@+id/asteroid_image"
                app:layout_constraintTop_toTopOf="@+id/asteroid_image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
